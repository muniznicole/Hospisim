@model Hospisim.Models.Prescricao

@{
    ViewData["Title"] = "Excluir Prescrição";
}

<!-- Container principal que se alinha com o layout geral -->
<div class="w-full max-w-3xl mx-auto px-4 py-16 sm:py-24">

    <!-- Formulário de confirmação dentro do Card -->
    <div class="bg-gray-900/50 border border-gray-700/60 rounded-2xl shadow-lg backdrop-blur-sm overflow-hidden">

        <!-- Cabeçalho do Card -->
        <div class="p-6 md:p-8 border-b border-gray-800/60 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h1 class="mt-4 text-2xl md:text-3xl font-bold">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-400">
                    Confirmar Exclusão
                </span>
            </h1>
            <p class="mt-2 text-lg text-gray-400">Tem certeza de que deseja excluir esta prescrição?</p>
        </div>

        <!-- Detalhes do Item a ser Excluído -->
        <div class="p-6 md:p-8">
            <dl class="bg-gray-800/40 border border-gray-700/60 rounded-lg p-6 space-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-400">Medicamento</dt>
                    <dd class="mt-1 text-base font-semibold text-gray-100">@Html.DisplayFor(model => model.Medicamento)</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Dosagem</dt>
                    <dd class="mt-1 text-base font-semibold text-gray-100">@Html.DisplayFor(model => model.Dosagem)</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Frequência</dt>
                    <dd class="mt-1 text-base font-semibold text-gray-100">@Html.DisplayFor(model => model.Frequencia)</dd>
                </div>
            </dl>
            <p class="mt-6 text-sm text-center text-yellow-500"><strong>Atenção:</strong> Esta ação não pode ser desfeita.</p>
        </div>

        <!-- Rodapé com Botões de Ação -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="p-6 md:p-8 bg-gray-900/30 flex justify-between items-center">
                <a asp-controller="Atendimentos" asp-action="Details" asp-route-id="@Model.AtendimentoId" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Cancelar
                </a>
                <input type="submit" value="Sim, Excluir" class="cursor-pointer inline-flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all" />
            </div>
        </form>

    </div>
</div>
