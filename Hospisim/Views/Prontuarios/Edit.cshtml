@model Hospisim.Models.Prontuario

@{
    ViewData["Title"] = "Editar Prontuário";
    var pacienteNome = ViewBag.PacienteNome ?? "Paciente";
}

<div class="w-full max-w-3xl mx-auto px-4 py-16 sm:py-24">

    <form asp-action="Edit">
        <div class="bg-gray-900/50 border border-gray-700/60 rounded-2xl shadow-lg backdrop-blur-sm overflow-hidden">

            <!-- Cabeçalho -->
            <div class="p-6 md:p-8 border-b border-gray-800/60 text-center">
                <h1 class="text-2xl md:text-3xl font-bold">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">
                        @ViewData["Title"]
                    </span>
                </h1>
                <p class="mt-2 text-lg text-gray-400">Paciente: @pacienteNome</p>
            </div>

            <div class="p-6 md:p-8 space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-500/10 p-4 rounded-lg text-sm space-y-1"></div>

                <!-- Campos ocultos -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PacienteId" />

                <!-- Grade -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-6">

                    <!-- Número do prontuário (readonly) -->
                    <div>
                        <label asp-for="Numero" class="block text-sm font-medium text-gray-300 mb-2">Número do Prontuário</label>
                        <input asp-for="Numero" readonly
                               class="w-full bg-gray-800/40 border border-gray-700/50 rounded-lg px-4 py-2.5 text-gray-400 cursor-not-allowed" />
                        <span asp-validation-for="Numero" class="text-sm text-red-400 mt-1 block"></span>
                    </div>

                    <!-- Data de abertura (readonly) -->
                    <div>
                        <label asp-for="DataAbertura" class="block text-sm font-medium text-gray-300 mb-2">Data de Abertura</label>
                        <input asp-for="DataAbertura" type="date" readonly
                               class="w-full bg-gray-800/40 border border-gray-700/50 rounded-lg px-4 py-2.5 text-gray-400 cursor-not-allowed" />
                        <span asp-validation-for="DataAbertura" class="text-sm text-red-400 mt-1 block"></span>
                    </div>

                    <!-- Observações -->
                    <div class="md:col-span-2">
                        <label asp-for="ObservacoesGerais" class="block text-sm font-medium text-gray-300 mb-2">Observações Gerais</label>
                        <textarea asp-for="ObservacoesGerais" rows="4" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white"></textarea>
                        <span asp-validation-for="ObservacoesGerais" class="text-sm text-red-400 mt-1 block"></span>
                    </div>
                </div>
            </div>

            <!-- Rodapé -->
            <div class="p-6 md:p-8 bg-gray-900/30 flex justify-between items-center">
                <a asp-action="PorPaciente" asp-route-pacienteId="@Model.PacienteId" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Voltar
                </a>
                <button type="submit"
                        class="bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-semibold py-2 px-6 rounded-lg shadow hover:shadow-lg transition-all">
                    Salvar Alterações
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
