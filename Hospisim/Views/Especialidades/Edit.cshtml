@model Hospisim.Models.Especialidade

@{
    ViewData["Title"] = "Editar Especialidade";
}

<!-- Container principal que se alinha com o layout geral -->
<div class="w-full max-w-3xl mx-auto px-4 py-16 sm:py-24">

    <!-- Formulário dentro do Card -->
    <form asp-action="Edit">
        <div class="bg-gray-900/50 border border-gray-700/60 rounded-2xl shadow-lg backdrop-blur-sm overflow-hidden">

            <!-- Cabeçalho do Card -->
            <div class="p-6 md:p-8 border-b border-gray-800/60">
                <h1 class="text-2xl md:text-3xl font-bold text-center">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">
                        @ViewData["Title"]
                    </span>
                </h1>
            </div>

            <!-- Corpo do Formulário -->
            <div class="p-6 md:p-8 space-y-6">

                <!-- Bloco para exibir erros de validação do modelo -->
                <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-500/10 p-4 rounded-lg text-sm space-y-1"></div>

                <!-- Campo oculto para o ID da especialidade -->
                <input type="hidden" asp-for="Id" />

                <!-- Campo Nome -->
                <div>
                    <label asp-for="Nome" class="block text-sm font-medium text-gray-300 mb-2">Nome da Especialidade</label>
                    <input asp-for="Nome" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-0 focus:ring-pink-500 focus:border-pink-500 transition-colors" placeholder="Ex: Cardiologia" />
                    <span asp-validation-for="Nome" class="mt-2 text-sm text-red-400"></span>
                </div>

            </div>

            <!-- Rodapé com Botões de Ação -->
            <div class="p-6 md:p-8 bg-gray-900/30 flex justify-between items-center">
                <a asp-action="Index" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Voltar para a Lista
                </a>
                <input type="submit" value="Salvar Alterações" class="cursor-pointer inline-flex items-center justify-center bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-px" />
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
