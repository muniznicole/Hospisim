@{
    ViewData["Title"] = "Home Page";
}

<!-- Container principal com espaçamento -->
<div class="w-full max-w-6xl mx-auto px-4 py-24 sm:py-32">

    <!-- Seção de Boas-Vindas -->
    <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-extrabold mb-4 tracking-tight">
            Bem-vindo ao <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">HOSPISIM</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto">
            Selecione um fluxo de trabalho para começar.
        </p>
    </div>

    <!-- Grid com os dois portais de acesso -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">

        <!-- Card 1: Fluxo de Atendimento -->
        <a asp-controller="Pacientes" asp-action="Index" class="group block p-8 bg-gray-900/50 rounded-2xl border border-gray-700/60 shadow-lg hover:border-pink-500/80 hover:-translate-y-2 transition-all duration-300 backdrop-blur-sm">
            <div class="flex items-center justify-center bg-gradient-to-br from-pink-500/20 to-purple-500/20 rounded-lg w-16 h-16 mb-6 transform group-hover:scale-110 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 21h7a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v11m0 5l4.879-4.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242z" />
                </svg>
            </div>
            <h3 class="text-2xl font-bold mb-2 text-gray-100">Atendimento</h3>
            <p class="text-gray-400 text-base">Inicie o fluxo clínico gerenciando pacientes e seus prontuários.</p>
        </a>

        <!-- Card 2: Acesso Administrativo -->
        <a asp-controller="Profissionals" asp-action="Index" class="group block p-8 bg-gray-900/50 rounded-2xl border border-gray-700/60 shadow-lg hover:border-pink-500/80 hover:-translate-y-2 transition-all duration-300 backdrop-blur-sm">
            <div class="flex items-center justify-center bg-gradient-to-br from-pink-500/20 to-purple-500/20 rounded-lg w-16 h-16 mb-6 transform group-hover:scale-110 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.096 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
            <h3 class="text-2xl font-bold mb-2 text-gray-100">Administrativo</h3>
            <p class="text-gray-400 text-base">Gerencie profissionais e especialidades do sistema.</p>
        </a>

    </div>
</div>
