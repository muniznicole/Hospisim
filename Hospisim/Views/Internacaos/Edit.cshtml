@model Hospisim.Models.Internacao
@using Hospisim.Models.Enums

@{
    ViewData["Title"] = "Editar Internação";
    var pacienteNome = ViewBag.PacienteNome;
}

<!-- Container principal que se alinha com o layout geral -->
<div class="w-full max-w-5xl mx-auto px-4 py-16 sm:py-24">

    <form asp-action="Edit">
        <div class="bg-gray-900/50 border border-gray-700/60 rounded-2xl shadow-lg backdrop-blur-sm overflow-hidden">

            <!-- Cabeçalho -->
            <div class="p-6 md:p-8 border-b border-gray-800/60 text-center">
                <h1 class="text-2xl md:text-3xl font-bold">
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">
                        @ViewData["Title"]
                    </span>
                </h1>
                <p class="mt-2 text-lg text-gray-400">Paciente: @pacienteNome</p>
            </div>

            <!-- Corpo do Formulário -->
            <div class="p-6 md:p-8 space-y-6">

                <div asp-validation-summary="ModelOnly" class="text-red-400 bg-red-500/10 p-4 rounded-lg text-sm space-y-1"></div>

                @* Campos ocultos *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AtendimentoId" />
                <input type="hidden" asp-for="PacienteId" />
                <input type="hidden" asp-for="DataEntrada" />


                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                    <div class="md:col-span-2">
                        <label asp-for="MotivoInternacao" class="block text-sm font-medium text-gray-300 mb-1">Motivo da Internação</label>
                        <textarea asp-for="MotivoInternacao" rows="3" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500"></textarea>
                        <span asp-validation-for="MotivoInternacao" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="DataEntrada" class="block text-sm font-medium text-gray-300 mb-1">Data de Entrada</label>
                        <input asp-for="DataEntrada" type="datetime-local" readonly class="w-full bg-gray-900 border border-gray-700/60 rounded-lg px-4 py-2.5 text-gray-400 cursor-not-allowed focus:outline-none focus:ring-0" />
                        <span asp-validation-for="DataEntrada" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="PrevisaoAlta" class="block text-sm font-medium text-gray-300 mb-1">Previsão de Alta (opcional)</label>
                        <input asp-for="PrevisaoAlta" type="date" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:ring-2 focus:ring-pink-500" />
                        <span asp-validation-for="PrevisaoAlta" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="Setor" class="block text-sm font-medium text-gray-300 mb-1">Setor</label>
                        <input asp-for="Setor" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                        <span asp-validation-for="Setor" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="Quarto" class="block text-sm font-medium text-gray-300 mb-1">Quarto</label>
                        <input asp-for="Quarto" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                        <span asp-validation-for="Quarto" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="Leito" class="block text-sm font-medium text-gray-300 mb-1">Leito</label>
                        <input asp-for="Leito" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                        <span asp-validation-for="Leito" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="PlanoSaudeUtilizado" class="block text-sm font-medium text-gray-300 mb-1">Plano de Saúde Utilizado</label>
                        <input asp-for="PlanoSaudeUtilizado" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500" />
                        <span asp-validation-for="PlanoSaudeUtilizado" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div>
                        <label asp-for="StatusInternacao" class="block text-sm font-medium text-gray-300 mb-1">Status da Internação</label>
                        <select asp-for="StatusInternacao" asp-items="Html.GetEnumSelectList<StatusInternacao>()" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white focus:outline-none focus:ring-2 focus:ring-pink-500"></select>
                        <span asp-validation-for="StatusInternacao" class="mt-2 text-sm text-red-400"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="ObservacoesClinicas" class="block text-sm font-medium text-gray-300 mb-1">Observações Clínicas</label>
                        <textarea asp-for="ObservacoesClinicas" rows="4" class="w-full bg-gray-800/60 border border-gray-700/80 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-pink-500"></textarea>
                        <span asp-validation-for="ObservacoesClinicas" class="mt-2 text-sm text-red-400"></span>
                    </div>

                </div>
            </div>

            <!-- Rodapé -->
            <div class="p-6 md:p-8 bg-gray-900/30 flex justify-between items-center">
                <a asp-controller="Atendimentoes" asp-action="Details" asp-route-id="@Model.AtendimentoId"
                   class="inline-flex items-center text-gray-300 hover:text-white transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                    Cancelar
                </a>
                <input type="submit" value="Salvar Alterações"
                       class="cursor-pointer bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
