<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOSPISIM</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .bg-gradient-main {
            background-color: #111827;
            background-image: radial-gradient(circle at top left, rgba(236, 72, 153, 0.08), transparent 35%), radial-gradient(circle at bottom right, rgba(139, 92, 246, 0.08), transparent 40%);
        }

        .brand-gradient {
            background-image: linear-gradient(to right, #ec4899, #a855f7);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
    </style>
</head>
<body class="bg-gradient-main text-gray-300 min-h-screen flex flex-col">

    <!-- Cabeçalho -->
    <header class="bg-gray-900/50 border-b border-gray-700/60 backdrop-blur-sm sticky top-0 z-50">
        <nav class="container mx-auto flex justify-between items-center p-4">
            <!-- Logo -->
            <a class="text-2xl font-bold brand-gradient" asp-controller="Home" asp-action="Index">
                HOSPISIM
            </a>

            <!-- Links de Navegação -->
            <div class="flex items-center space-x-6 text-sm">
                <a class="hover:text-white transition-colors" asp-controller="Pacientes" asp-action="Index">Atendimento</a>
                <a class="hover:text-white transition-colors" asp-controller="Profissionals" asp-action="Index">Administrativo</a>
            </div>
        </nav>
    </header>

    <!-- Conteúdo Principal -->
    <main role="main" class="flex-grow">
        @RenderBody()
    </main>

    <!-- Rodapé -->
    <footer class="bg-gray-900/50 border-t border-gray-700/60 mt-auto py-6">
        <div class="container mx-auto text-center text-gray-400 text-sm">
            &copy; @DateTime.Now.Year - Hospisim | Desenvolvido por: Nicole Muniz |
            <a class="font-medium text-pink-400 hover:text-pink-300" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
