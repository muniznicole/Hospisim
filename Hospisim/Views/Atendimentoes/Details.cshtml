@model Hospisim.Models.Atendimento

@{
    ViewData["Title"] = "Detalhes do Atendimento";
    var pacienteNome = ViewBag.PacienteNome ?? "Paciente";
    var prontuarioNumero = ViewBag.ProntuarioNumero ?? "N/A";
}

<!-- Container principal que se alinha com o layout geral -->
<div class="w-full max-w-4xl mx-auto px-4 py-16 sm:py-24">

    <!-- Card de conteúdo -->
    <div class="bg-gray-900/50 border border-gray-700/60 rounded-2xl shadow-lg backdrop-blur-sm overflow-hidden">

        <!-- Cabeçalho do Card -->
        <div class="p-6 md:p-8 border-b border-gray-800/60 text-center">
            <h1 class="text-2xl md:text-3xl font-bold">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">
                    @ViewData["Title"]
                </span>
            </h1>
            <p class="mt-2 text-lg text-gray-400">Paciente: @pacienteNome | Prontuário Nº: @prontuarioNumero</p>
        </div>

        <!-- Detalhes do Item -->
        <div class="p-6 md:p-8">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <div class="p-4 bg-gray-800/40 rounded-lg">
                    <dt class="text-sm font-medium text-gray-400">Data e Hora</dt>
                    <dd class="mt-1 text-lg font-semibold text-gray-100">@Model.DataHora.ToString("dd/MM/yyyy HH:mm")</dd>
                </div>
                <div class="p-4 bg-gray-800/40 rounded-lg">
                    <dt class="text-sm font-medium text-gray-400">Tipo de Atendimento</dt>
                    <dd class="mt-1 text-lg font-semibold text-gray-100">@Html.DisplayFor(model => model.Tipo)</dd>
                </div>
                <div class="md:col-span-2 p-4 bg-gray-800/40 rounded-lg">
                    <dt class="text-sm font-medium text-gray-400">Profissional Responsável</dt>
                    <dd class="mt-1 text-lg font-semibold text-gray-100">@Html.DisplayFor(model => model.Profissional.NomeCompleto) - <span class="text-pink-400 font-medium">@Html.DisplayFor(model => model.Profissional.Especialidade.Nome)</span></dd>
                </div>
                <div class="p-4 bg-gray-800/40 rounded-lg">
                    <dt class="text-sm font-medium text-gray-400">Local</dt>
                    <dd class="mt-1 text-lg font-semibold text-gray-100">@Html.DisplayFor(model => model.Local)</dd>
                </div>
                <div class="p-4 bg-gray-800/40 rounded-lg">
                    <dt class="text-sm font-medium text-gray-400">Status</dt>
                    <dd class="mt-1">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                            @(Model.Status == StatusAtendimento.Finalizado ? "bg-green-500/20 text-green-300" :
                              Model.Status == StatusAtendimento.Cancelado ? "bg-red-500/20 text-red-300" :
                              "bg-yellow-500/20 text-yellow-300")">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </dd>
                </div>
            </dl>
        </div>

        <!-- Rodapé com Botões de Ação -->
        <div class="p-6 md:p-8 bg-gray-900/30 flex justify-between items-center">
            <a asp-action="PorProntuario" asp-route-prontuarioId="@Model.ProntuarioId" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Voltar
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="cursor-pointer inline-flex items-center justify-center bg-yellow-500/80 hover:bg-yellow-500 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transition-all">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
                    <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                </svg>
                Editar
            </a>
        </div>
    </div>
</div>
